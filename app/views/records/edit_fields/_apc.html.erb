<% if f.object.model_class == ::Article %>
  <%= f.input key,
    as: :multi_value_select,
    collection: ApcTypesService.select_all_options,
    input_html: {
      class: 'form-control',
      prompt: 'Select apc option'
    }
  %>
<% elsif f.object.class.multiple? key %>
  <%= f.input key,
    as: :multi_value,
    input_html: { class: 'form-control' },
    required: f.object.required?(key)
  %>
<% else %>
  <%= f.input key, required: f.object.required?(key) %>
<% end %>
